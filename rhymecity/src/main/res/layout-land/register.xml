<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewRegisterIndicator"
                    android:layout_centerInParent="true"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:weightSum="1"
            android:padding="10dp"
            android:layout_centerVertical="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="fill_parent"
                android:id="@+id/registerIndicator1">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="fill_parent"
                android:id="@+id/registerIndicator2">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="fill_parent"
                android:id="@+id/registerIndicator3">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/registerBasicInfoBlock"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/register_basic_information"
                        android:id="@+id/textView9"
                        android:textColor="@color/registerBasicInfo"/>

                    <View
                        android:id="@+id/view_tracker1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@color/registerBasicInfo"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:clickable="true"
                    android:layout_marginBottom="10dp" >

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_username"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:clickable="true"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/editText5"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_password"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:clickable="true"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/editText6"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_confirm_password"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/register_personal_information"
                        android:id="@+id/txtPersonalInformation"
                        android:textColor="@color/registerBasicInfo"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@color/registerBasicInfo"
                        android:layout_marginLeft="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/editText10"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_title"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_firstname"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editText7" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_lastname"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editText8" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/dob"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editText9" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerAddressInfoBlock"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/register_address_information"
                        android:id="@+id/txtAddressInfo"
                        android:textColor="@color/registerBasicInfo"/>

                    <View
                        android:id="@+id/view_tracker2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@color/registerBasicInfo"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_address_1"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextAddressLine1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_address_2"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextAddressLine2" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_country"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextCountry" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_lastname"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextTown" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_state"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextState" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_postcode"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextPostcode" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerContactInfoBlock"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/register_contact_information"
                        android:id="@+id/txtContactInfo"
                        android:textColor="@color/registerBasicInfo"/>

                    <View
                        android:id="@+id/view_tracker3"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@color/registerBasicInfo"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_mobile_phone"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextMobilePhone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_alternate_phone"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextAlternatePhone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:hint="@string/register_fax"
                        android:textSize="@dimen/font16sp"
                        android:textColorHint="@color/loginFontTxt"
                        android:id="@+id/editTextFax" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_continue_button"
                    android:background="@drawable/login_login_button_clicked"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/registerContinueButton"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>